<%= turbo_frame_tag 'room_form' do %>
  <h4 class="font-medium text-base text-white text-center">Create new room</h4>

    <%= form_with(model: room, class: 'fex flex-col my-3 w-full') do |form| %>
        <% if room.errors.any? %>
            <div class="flex flex-col gap-1 justify-center">
                <% room.errors.full_messages.each do |message| %>
                    <p class="text-red-600 text-sm font-semibold"><%= message %></p>
                <% end %>
            </div>
        <% end %>
        <div class="flex flex-col gap-1 justify-center">
            <%= form.label :name, class: 'text-white font-semibold text-sm' %>
            <%= form.text_field :name, class: 'w-full rounded border border-gray-200 font-semibold text-sm' %>
        </div>
        <div class="flex mt-2 gap-2 justify-end">
            <%= form.submit class: 'cursor-pointer p-2 text-sm text-white font-semibold bg-green-600 rounded' %>
            <%= link_to 'Cancel', :back, class: 'cursor-pointer p-2 text-sm text-white font-semibold bg-red-600 rounded' %>
        </div>
    <% end %>
<% end %>
